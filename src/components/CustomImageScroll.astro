---
import { Image } from "astro:assets";

import starFox from "/public/ProjectImages/starfoxImage.png";
import DimentionalDead from "/public/ProjectImages/dimentionalImage.png";
import punches from "/public/ProjectImages/punchesImage.png";
import noWay from "/public/ProjectImages/nowayImage.png";
import beat from "/public/ProjectImages/beatImage.png";
import fish from "/public/ProjectImages/fishImage.png";
import freddy from "/public/ProjectImages/freddyImage.png";
import multiverse from "/public/ProjectImages/multiverseImage.png";
import civilizations from "/public/ProjectImages/civImage.png";
import shadow from "/public/ProjectImages/shadowImage.png";
import flappy from "/public/ProjectImages/flappyImage.png";
import sinsong from "/public/ProjectImages/sinsongImage.png";

const cards = [
  {
    title: "Star Fox's Bullet Shitshow",
    imagealt: "Star Fox's Bullet Shitshow thumbnail",
    image: starFox,
    href: "https://github.com/TaquitosDorados/Bullet-Shitfest/releases/latest",
  },
  {
    title: "Dimentional Dead",
    imagealt: "Dimentional Dead thumbnail",
    image: DimentionalDead,
    href: "https://github.com/TaquitosDorados/DimentionalDead",
  },
  {
    title: "Out of Punches",
    imagealt: "Out of Punches thumbnail",
    image: punches,
    href: "https://github.com/TaquitosDorados/Out-Of-Punches/releases/latest",
  },
  {
    title: "No way to Run",
    imagealt: "No way to Run thumbnail",
    image: noWay,
    href: "https://github.com/Ketosvaldo/MGNG_InfanciaTragedia/releases/latest",
  },
  {
    title: "Ultimate Super Mega Beat Smasher Mashup 2022",
    imagealt: "Ultimate Super Mega Beat Smasher Mashup 2022 thumbnail",
    image: beat,
    href: "https://github.com/TaquitosDorados/Ultimate-Super-Mega-Beat-Smasher-Mashup-2022/releases/latest",
  },
  {
    title: "Fishing Simulator",
    imagealt: "Fishing Simulator thumbnail",
    image: fish,
    href: "https://github.com/TaquitosDorados/Fishing-Simulator/releases/latest",
  },
  {
    title: "Freddy's Kart",
    imagealt: "Freddy's Kart thumbnail",
    image: freddy,
    href: "https://github.com/TaquitosDorados/FreddysKart",
  },
  {
    title: "B-The-Multiverse",
    imagealt: "B-The-Multiverse thumbnail",
    image: multiverse,
    href: "https://github.com/TaquitosDorados/B-The-Multiverse/releases/latest",
  },
  {
    title: "Civilizations 7",
    imagealt: "Civilizations 7 thumbnail",
    image: civilizations,
    href: "https://github.com/TaquitosDorados/Civilizations7/releases/latest",
  },
  {
    title: "Shadow Footsies",
    imagealt: "Shadow Footsies thumbnail",
    image: shadow,
    href: "https://github.com/TaquitosDorados/Shadow-Footsies/releases/latest",
  },
  {
    title: "Flappy Detective",
    imagealt: "Flappy Detective thumbnail",
    image: flappy,
    href: "https://github.com/lemingter/DetectiveEnProblemas",
  },
  {
    title: "SinSong",
    imagealt: "SinSong thumbnail",
    image: sinsong,
    href: "https://github.com/MataGameDev/SinSong/releases/latest",
  },
];
---

<div class="flex my-4 items-center justify-center">
  <div class="relative w-full overflow-hidden">
    <!-- For some reason the white vignette effect don't work in this sandbox but if you uncomment the following lines in VSCode, they should work -->

    <div class="block">
      <div
        class="pointer-events-none absolute -top-1 z-10 h-20 w-full bg-gradient-to-b from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-1 z-10 h-20 w-full bg-gradient-to-t from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -left-1 z-10 h-full w-20 bg-gradient-to-r from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -right-1 z-10 h-full w-20 bg-gradient-to-l from-zinc-950 to-transparent"
      >
      </div>
    </div>

    <div
      id="scroller"
      class="mx-auto grid h-[450px] w-[300px] animate-skew-scroll grid-cols-1 gap-5 sm:w-[750px] sm:grid-cols-2"
    >
      <!-- These are all the same components - if you're using React, you can use a map to iterate through all of them -->
      {
        cards.map((card) => (
          <a
            target="_blank"
            href={card.href}
            class="cursor-pointer items-center bg-zinc-900 space-x-2 p-4 shadow-md transition-all hover:-translate-y-1 hover:translate-x-1 hover:scale-[1.025] hover:shadow-xl"
          >
            <div class="flex-shrink-0">
              <Image
                loading="eager"
                src={card.image}
                alt={card.imagealt}
                class="mb-4 border  border-black"
                densities={[0.5, 1, 3]}
              />
            </div>
            <div class="flex flex-col">
              <h3 class="font-semibold text-white">{card.title}</h3>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>
<style></style>
<script>
  //On screens lower than 640px, animation skew-scroll should translateY(-830%)
  //On screens higher than 640px, animation skew-scroll should translateY(-430%)
</script>
